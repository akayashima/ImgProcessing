int main()
{
	//u32 tStart,tEnd;
	//XMbox ConfigPtr;
	XMutex XMutex[2];
	XMutex_Config *InsPtr[2];
	u32 xmutex_status;

	xil_printf("\r\n MB 1 Start");

	//init();

	//-- Mailbox 1
	InsPtr[1] = XMutex_LookupConfig(XPAR_MUTEX_0_IF_1_DEVICE_ID);

	xmutex_status = XMutex_CfgInitialize(&XMutex[1], InsPtr[1], XPAR_MUTEX_0_IF_0_BASEADDR);//Mutex1 initialize
		if(xmutex_status != XST_SUCCESS){
			xil_printf("\r\n Mutex-1 Initialize Error ");
		}

	for(;;){

		/*****************************処理1*****************************/
		while(1){
		xmutex_status = Mutex_Trylock(&XMutex[1],XPAR_MUTEX_0_IF_1_NUM_MUTEX-1);//Mutex0の状態を監視
		if(xmutex_status == 1)//dramに値が書かれた
			break;
		}
		//rd_dram(dram);//dramから値を読む
		/*****************************処理2*****************************/
		xmutex_status = Mutex_IsLocked(&XMutex[1],XPAR_MUTEX_0_IF_0_NUM_MUTEX-1);//Mutex0をロック
		xmutex_status = Mutex_SetUser(&XMutex[1],XPAR_MUTEX_0_IF_0_NUM_MUTEX-1,0);//Mutex0のユーザレジスタを0にする.
		xmutex_status = Mutex_Unlock(&XMutex[1],XPAR_MUTEX_0_IF_0_NUM_MUTEX-1);//Mutex0のユーザレジスタをUnlock

		/*****************************処理3*****************************/
		xil_printf("\r\n %d \n",(*dram)*10);

		/*****************************処理4*****************************/
		xmutex_status = Mutex_IsLocked(&XMutex[1],XPAR_MUTEX_0_IF_0_NUM_MUTEX);//Mutex1をロック
		xmutex_status = Mutex_SetUser(&XMutex[1],XPAR_MUTEX_0_IF_0_NUM_MUTEX,1);//Mutex1のユーザレジスタを1にする.
		xmutex_status = Mutex_Unlock(&XMutex[1],XPAR_MUTEX_0_IF_0_NUM_MUTEX);//Mutex1のユーザレジスタをUnlock

	}
}

